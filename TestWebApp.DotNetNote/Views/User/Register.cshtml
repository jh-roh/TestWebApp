@using TestWebApp.DotNetNote.Models.User;
@model UserViewModel

<h1>회원가입</h1>

@section scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<form asp-controller="User" asp-action="Register" method="post">
    <div asp-validation-summary="All">

    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="UserID">
             
        </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="UserID" placeholder="아이디"/>
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Password">

        </label>
        <div class="col-sm-10">
            <input type="password" class="form-control" asp-for="Password" placeholder="패스워드" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <input type="submit" value="가입" class="btn btn-primary btn-lg"/>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">취소</a>
        </div>
    </div>


    @*Bootstrap Snippet Pack*@
</form>