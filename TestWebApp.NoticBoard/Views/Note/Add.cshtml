@model TestWebApp.NoticBoard.Models.Note

@{
}

<h2>게시물 추가</h2>

<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-10">
        <form method="post" asp-controller="Note" asp-action="Index">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label>제목</label>
                <input type="text" class="form-control" asp-for="NoteTitle" placeholder="제목 입력" />
                <span class="text-danger" asp-validation-for="NoteTitle"></span>
            </div>
            <div class="form-group">
                <textarea class="form-control editor" rows="20" asp-for="NoteContent" placeholder="내용 입력"></textarea>
                <span class="text-danger" asp-validation-for="NoteContent"></span>
            </div>

            <div>
                <button type="submit" class="btn btn-primary" asp-controller="Note" asp-action="Add">저장</button>
                <a class="btn btn-warning" asp-controller="Note" asp-action="Index">취소</a>
            </div>
        </form>
    </div>
    <div class="col-lg-4"></div>
</div>
